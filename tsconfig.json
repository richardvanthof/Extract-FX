{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true, //FIX: needs to be turned on but gives errors
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "@esTypes/*": ["./src/jsx"],
      "@/*": ["./src/*"]
    },
    "types": ["svelte", "node"],
    "baseUrl": "."
  },
  "include": ["./src", "./src/", "./src/**/*.d.ts"],
  "exclude": ["./src/jsx", "./legacy"]
}
